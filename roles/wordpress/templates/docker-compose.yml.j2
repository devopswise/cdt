version: '2'
services:
  homepage:
    image: "{{ wordpress_registry_url }}{{ wordpress_image_name }}:{{ wordpress_version }}"
    restart: always
    environment:
      http_proxy: "{{ http_proxy }}"
      https_proxy: "{{ https_proxy }}"
      no_proxy: "{{ no_proxy }}"
      WORDPRESS_DB_USER: "{{ wordpress_db_user }}"
      WORDPRESS_DB_PASSWORD: "{{ wordpress_db_pass }}"
      WORDPRESS_DB_HOST: "{{ wordpress_db_host }}"
      WORDPRESS_DB_NAME: "{{ wordpress_db_name }}"
      WORDPRESS_DB_PORT: "{{ wordpress_db_port }}"
    volumes:
      - "{{ cdt_data }}/{{ wordpress_service_name }}:/var/www/html"
    networks:
      - internal
    depends_on:
      - homepage_db
    labels:
      - traefik.backend=homepage
      - traefik.frontend.rule=Host:www.{{ base_domain }}
      - traefik.docker.network=internal
      - traefik.port=80
    logging: 
      driver: "syslog"
      options:
        syslog-facility: "local2"
        tag: "docker/{% raw %}{{.Name}}{% endraw %}"
  homepage_db:
    image: mariadb:{{ mariadb_version }}
    restart: always
    environment:
      MYSQL_ROOT_PASSWORD: "{{ wordpress_db_pass }}"
      MYSQL_DATABASE: "{{ wordpress_db_name }}"
      MYSQL_USER: "{{ wordpress_db_user }}"
      MYSQL_PASSWORD: "{{ wordpress_db_pass }}"
    networks:
      - internal
networks:
  internal:
    external: true
  external:
    external: true
